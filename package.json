{
  "name": "qyzz-simulator-16",
  "version": "2.0.0",
  "main": "backend/index.js",
  "author": "16Bushilu",
  "scripts": {
    "start": "node backend/index.js",
    "dev": "npm run dev:backend",
    "dev:backend": "cd backend && node index.js",
    "install:all": "npm install && cd backend && npm install"
  },
  "build": {
    "appId": "com.yourname.qyzz",
    "productName": "青云之志算分小助手",
    "files": [
      "electron/**",
      "frontend/build/**",
      "backend/**",
      "package.json"
    ],
    "extraResources": [
      "backend/**",
      "frontend/build/**"
    ],
    "asar": true,
    "forceCodeSigning": false,
    "win": {
      "target": [
        { "target": "portable", "arch": ["x64"] },
        { "target": "nsis", "arch": ["x64"] }
      ],
      "icon": "assets/16.ico"
    },
    "nsis": {
      "oneClick": true,
      "perMachine": false,
      "allowToChangeInstallationDirectory": false
    }
  },
  "devDependencies": {
    "concurrently": "^9.2.1"
  }
}
